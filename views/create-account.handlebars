<h2>Create an account</h2>

<form class="form create-account-form">
  <div class="form-group">
    <label for="name">Name:</label>
    <input class="form-input" type="text" id="name-create" name="name-create" />
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input class="form-input" type="email" id="email-create" name="email-create" />
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <input class="form-input" type="password" id="password-create" name="password-create" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Create Account</button>
  </div>
</form>

<a href="/login">Return to log in</a>

  <script src="/js/create.js"></script>

