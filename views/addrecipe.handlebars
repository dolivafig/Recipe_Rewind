<h2>Add a Recipe</h2>

<form class="form create-account-form">
  <div class="form-group">
    <label for="recipeName">Recipe Name:</label>
    <input class="form-input" type="text" id="recipeName" name="recipeName" />
  </div>
  <div class="form-group">
    <label for="ingredients">Ingredients:</label>
    <input class="form-input" type="ingredients" id="ingredients" name="ingredients" />
  </div>
  <div class="form-group">
    <label for="method">Method:</label>
    <input class="form-input" type="method" id="method" name="method" />
  </div>
  <div class="form-group">
    <label for="category">Category:</label>
    <select name="category" id="category">
    <option value="Breakfast">Breakfast</option>
    <option value="Lunch">Lunch</option>
    <option value="Dinner">Dinner</option>
    </select>
  </div>
  <div class="form-group">
    <button class="uk-button uk-button-primary" type="submit">Save</button>
    <button class="uk-button uk-button-secondary" onclick="location.href='/'">Back</button>
  </div>
</form>

  <script src="/js/addRecipe.js"></script>

